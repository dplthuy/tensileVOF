FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "./caseConditions"

application     compressibleTensileForceInterIsoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         $simTime;

deltaT          $dtMax;

writeControl    adjustableRunTime;

writeInterval   1;

purgeWrite      0;

writeFormat     ascii;

writePrecision  10;

writeCompression off;

timeFormat      general;

timePrecision   10;

runTimeModifiable yes;

adjustTimeStep  no;

maxCo           0.5;

maxAlphaCo      0.5;

maxDeltaT       $dtMax;

functions
{
    pressureMinMax
    {
        type            fieldMinMax;
        libs            (fieldFunctionObjects);
        mode            magnitude;
        fields          (p);
        location        true;
        executeControl  timeStep;
        executeInterval 1;
    }

    gasVelocity
    {
        type            multiply;
        libs            (fieldFunctionObjects);
        fields          (alpha.gas U);

        result          U.gas;
        enabled         true;
        executeControl  timeStep;
        executeInterval 1;
	    writeControl	writeTime;
    }

    velocityMinMax
    {
        type            fieldMinMax;
        libs            (fieldFunctionObjects);
        mode            magnitude;
        fields          (U.gas);
        location        true;
        executeControl  timeStep;
        executeInterval 1;
    }

    velocityAverage
    {
        type            volFieldValue;
        libs            (fieldFunctionObjects);

        fields          (U.gas);

        operation       volAverage;
        regionType      all;

        executeControl  timeStep;
        executeInterval 1;

        writeFields     false;
    }

};

libs ("libmyFiniteVolume" "libmyturbulenceModels" "libmyMeshTools" "libmyFieldFunctionObjects" "libmyDynamicFvMesh");
// ************************************************************************* //
