averages
{

	type		fieldAverage;
	libs		(fieldFunctionObjects);
	writeControl	runTime;
	writeInterval	$writeMeanFieldsEvery;
	
	timeStart	0.0;
	
	fields
	(
	   Ugas
	   {
	        mean		on;
	   	    prime2Mean	on;
	   	    base		time;
	   }

	   alpha.melt
	   {
		    mean		on;
		    prime2Mean	off;
		    base		time;
	   }
	);
    // Optional entries
    restartOnRestart    false;
    restartOnOutput     false;
    periodicRestart     false;
}


